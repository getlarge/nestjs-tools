{
  "packages": ["packages/*"],
  "npmClient": "npm",
  "version": "independent",
  "useNx": true,
  "command": {
    "publish": {
      "ignoreChanges": ["**/package-lock.json", "*.md", "**/*.spec.ts", "**/fixtures/*"],
      "conventionalCommits": true,
      "message": "chore(release): publish"
    }
  }
}
