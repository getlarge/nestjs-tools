{
  "packages": ["packages/*"],
  "npmClient": "npm",
  "version": "independent",
  "command": {
    "publish": {
      "ignoreChanges": ["**/package-lock.json", "*.md", "**/*.spec.ts", "**/fixtures/*"],
      "conventionalCommits": true,
      "message": "chore(release): publish"
    }
  },
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
